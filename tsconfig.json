{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "tests": ["tests/*"],
      "/components/*": ["src/components/*"],
      "/utils/*": ["src/utils/*"],
      "/navigation/*": ["src/navigation/*"],
      "/types/*": ["src/types/*"],
      "/screens/*": ["src/screens/*"],
      "/constants/*": ["src/constants/*"],
      "/assets/*": ["src/assets/*"]
    }
  }
}
